<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/_4sdp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/nameCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="eergregerge"
            android:textSize="@dimen/_12sdp"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/nameHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/nameCountry"
            android:text="33rerfr"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintEnd_toStartOf="@+id/namberDeath"
            android:textSize="@dimen/_12sdp"
            android:textColor="@android:color/holo_red_dark"
            />
        <TextView
            android:id="@+id/namberDeath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"

            android:text="33rerfr"
            app:layout_constraintTop_toTopOf="@+id/nameHealth"
            app:layout_constraintBottom_toBottomOf="@+id/nameHealth"
            android:layout_marginTop="@dimen/_6sdp"
           app:layout_constraintStart_toEndOf="@+id/nameHealth"
            android:textSize="@dimen/_12sdp"
            android:textColor="@android:color/holo_red_dark"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>